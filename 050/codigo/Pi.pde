String pi = "3.";
PFont font;
int n_colunas = 39;
int n_linhas = 24;
int font_tamanho = 17;
int contador = 0;

int[] indices = new int[100];

void setup() {
  size(500, 500);
  font = createFont("JetBrainsMono-Medium.ttf", font_tamanho);
  textFont(font);
  textAlign(LEFT, TOP);
  for (int i = 1; i <= 100; i++) {
    String numero_procurado = str(i);
    indices[i-1] = pi.indexOf(numero_procurado);
  }
}

void draw() {
  background(255);
  
  int indice_contagem = indices[contador];
  
  int destaque = 0;
  for (int j = 0; j < n_linhas; j++) {
    for (int i = 0; i < n_colunas; i++) {
      int indice = i + j * n_colunas;
      float x = (font_tamanho * 0.7) * i + (font_tamanho * 1.1);
      float y = (font_tamanho * 1.1) * j + (font_tamanho * 1.4);
      
      if( indice == indice_contagem) {
        destaque = nDigitos(contador + 1);
      }
      fill(200);
      if(destaque > 0) {
        fill(0);
        destaque--;
      }
      text(pi.charAt(indice), x, y);
    }
  }
  
  contador++;
  save("saida/" + contador + ".jpg");
  if(contador == 100) {
    exit();
  }
  
}

int nDigitos(int n) {  
  String str = Integer.toString(n);  
  int nDigitos = str.length();  
  return nDigitos;  
}  
